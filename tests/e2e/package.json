{
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",

    "test:api": "cypress run --spec 'cypress/tests/api/**/*.cy.js'",
    "test:e2e": "cypress run --spec 'cypress/tests/e2e/**/*.cy.js'",
    "test:integration": "cypress run --spec 'cypress/tests/integration/**/*.cy.js'",
    "test:all": "cypress run",

    "test:api:headed": "cypress run --headed --spec 'cypress/tests/api/**/*.cy.js'",
    "test:e2e:headed": "cypress run --headed --spec 'cypress/tests/e2e/**/*.cy.js'",

    "test:smoke": "cypress run --spec 'cypress/tests/**/*smoke*.cy.js'",
    "test:regression": "cypress run --spec 'cypress/tests/**/*.cy.js' --browser chrome"
  },
  "dependencies": {
    "@types/node": "^24.1.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "cypress": "^14.5.4"
  }
}